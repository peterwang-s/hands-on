.custom-toast-node
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 1999;
    display: flex;
    align-items: center;
    // transition: opacity 0.5s ease-out;
    // pointer-events: none;
    justify-content: center;
    width: 100vw;
    height: 100vh;
    .toast-mask
        .toast-outter
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            box-sizing: border-box
            min-width: 120px;
            max-width: 160px;
            height: 120px;
            margin: auto;
            padding: 15px;
            background: #242934;
            border-radius: 6px;
            opacity: 0.9;
            .toast-wrap
                margin-bottom: 7px
                img 
                    display: inline-block
                    width: 36px
                    height 36px
            .toast-text
                box-sizing: border-box;
                max-width: 160px;
                padding: 0 15px;
                overflow hidden
                color: #FFF;
                font-weight: 400;
                font-size: 14px;
                font-family: PingFangSC-Regular, PingFang SC;
                line-height: 18px;
                white-space nowrap
                text-overflow ellipsis